<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>
    <pipelines>
      <initialize>
        <processor type="Sitecore.Support.LanguageFallback.ResetFallbackStrategy, Sitecore.Support.115203" />
      </initialize>
    </pipelines>
    <events>
      <event name="publish:end">
        <handler type="Sitecore.Support.Event.Translate, Sitecore.Support.115203" method="ClearCache"/>
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.Support.Event.Translate, Sitecore.Support.115203" method="ClearCache"/>
      </event>
    </events>
  </sitecore>
</configuration>